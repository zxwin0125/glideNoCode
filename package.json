{
  "name": "glidenocode",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev:builder": "pnpm --filter builder run dev",
    "lint:vue": "eslint --fix",
    "lint:style": "stylelint \"{packages,apps}/**/*.{css,scss,vue}\"",
    "spellcheck": "cspell lint --dot --gitignore --color --cache --showSuggestions \"{packages,apps}/**/*.@(html|js|cjs|mjs|ts|tsx|css|scss|md|vue)\"",
    "commit": "git-cz",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --cache --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --cache --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --cache --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --cache --parser=typescript --write"
    ]
  },
  "keywords": [],
  "author": "zxwin0125",
  "license": "ISC",
  "description": "From 0 to 1 to build no code platform",
  "devDependencies": {
    "eslint": "9.7.0",
    "@eslint/js": "9.7.0",
    "globals": "15.8.0",
    "eslint-plugin-vue": "9.27.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "vue-eslint-parser": "9.4.3",
    "@typescript-eslint/parser": "8.40.0",
    "stylelint": "16.7.0",
    "stylelint-config-standard-vue": "1.0.0",
    "stylelint-config-standard": "36.0.1",
    "stylelint-config-standard-scss": "13.1.0",
    "cspell": "8.11.0",
    "cz-git": "1.9.4",
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "commitizen": "4.3.0",
    "husky": "9.1.1",
    "lint-staged": "15.2.7"
  }
}
